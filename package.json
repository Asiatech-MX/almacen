{
  "name": "almacen-electron",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "electron-builder",
    "dist": "pnpm build && pnpm pack",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:codegen": "kysely-codegen",
    "db:generate-types": "pgtyped",
    "db:validate": "bash db/validate-schema.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest apps/electron-renderer/src/**/*.{test,spec}.{ts,tsx}",
    "test:integration": "jest tests/integration/**/*.{test,spec}.{ts,tsx}",
    "test:contract": "jest tests/contract",
    "test:contract:watch": "jest tests/contract --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:ci": "jest --coverage --watchAll=false && playwright test",
    "test:ci:unit": "jest --coverage --watchAll=false",
    "test:ci:e2e": "playwright test",
    "test:verify": "jest --coverage && playwright test && pnpm test:coverage:check",
    "test:coverage:check": "node scripts/check-coverage.js"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
