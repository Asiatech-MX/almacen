{
  "name": "almacen-electron",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "electron-builder",
    "dist": "pnpm build && pnpm pack",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:codegen": "kysely-codegen",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest apps/electron-renderer/src/**/*.{test,spec}.{ts,tsx}",
    "test:integration": "jest tests/integration/**/*.{test,spec}.{ts,tsx}",
    "test:contract": "jest tests/contract",
    "test:contract:watch": "jest tests/contract --watch",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:ci": "jest --coverage --watchAll=false && playwright test",
    "test:ci:unit": "jest --coverage --watchAll=false",
    "test:ci:e2e": "playwright test",
    "test:verify": "jest --coverage && playwright test && pnpm test:coverage:check",
    "test:coverage:check": "node scripts/check-coverage.js"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^11.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "jest-extended": "^7.0.0",
    "jest-junit": "^16.0.0",
    "kysely-codegen": "^0.19.0",
    "tailwindcss": "^4.1.17",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.0.0",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "@pgtyped/cli": "^2.4.3",
    "@pgtyped/runtime": "^2.4.2",
    "@radix-ui/react-slot": "^1.2.4",
    "@types/react-select": "^5.0.1",
    "dotenv": "^17.2.3",
    "electron": "^35.7.5",
    "electron-log": "^5.4.3",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react-select": "^5.10.2",
    "uuid": "^13.0.0"
  },
  "main": "./dist/main/index.cjs",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.21.0"
}
